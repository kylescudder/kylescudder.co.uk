---
import Card from '../Card.astro'
import { LINKS } from '../../lib/constants'
import { Image } from 'astro:assets'
---

<Card
  colSpan="md:col-span-1"
  rowSpan="md:row-span-2"
  title="Letterboxd"
  href={LINKS.letterboxd}
>
  <div class="flex h-full w-full flex-col">
    <div>
      <Image
        width="50"
        height="50"
        src="/me_letterboxd.png"
        class="pointer-events-none absolute right-[-110px] bottom-[-100px] z-[-1] max-h-[300px] w-auto opacity-50 select-none md:relative md:right-auto md:bottom-auto md:z-auto md:opacity-100"
        alt="memoji of Kyle doing a chefs kiss"
        loading="eager"
      />
    </div>
    <div>
      <p class="dark:text-muted-foreground mt-2 text-sm">
        If you want to see my letterboxd, you can follow me here.
      </p>
    </div>
  </div>
</Card>
